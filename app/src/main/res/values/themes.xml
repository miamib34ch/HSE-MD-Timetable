<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimetableForHSEFE" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScheduleTitle" parent="HSE.Style.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ScheduleHeader" parent="HSE.Style.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HSE.Style.Value" parent="android:TextAppearance">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="HSE.Style.Label" parent="HSE.Style.Value">
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="mainTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="secondaryTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mainButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="secondaryButton" parent="mainButton">
        <item name="backgroundTint">@color/colorPrimaryVariant</item>
    </style>
</resources>